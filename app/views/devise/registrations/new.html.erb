<div class = "sign_up_page">
  <h4 class = "sign_up_theme">新しいアカウントを作成</h4>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
      <%= f.label "*必須", class: "required" %>
      <%= f.text_field :name, placeholder: "ユーザー名", class: "sign_up_field" %>    
    </div>

    <div>
      <%= f.label "*必須", class: "required" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "sign_up_field" %>
    </div>

    <div>
      <%= f.label "*必須", class: "required" %>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", class: "sign_up_field" %>
    </div>

    <div>
      <%= f.label "*必須", class: "required" %>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード確認", class: "sign_up_field" %>
    </div>

    <div class="sign_up_actions">
      <%= f.submit "新しいアカウントを作成", class: "sign_up_button" %>
    </div>
  <% end %>
  <div>
    <%= link_to "すでにアカウントをお持ちの方はログイン", '/users/sign_in', class: "sign_in_link" %>
  </div>
</div>
