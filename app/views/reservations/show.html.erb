<div class = "reserved_show_page">
  <table class = "reserved_show_table">
    <tr>
      <th>予約した部屋</th>
      <td><%= @reservation.room.room_name %></td>
    </tr>
    <tr>
      <th>開始日</th>
      <td><%= @reservation.start_date.strftime('%Y年%m月%d日') %></td>
    </tr>
    <tr>
      <th>終了日</th>
      <td><%= @reservation.end_date.strftime('%Y年%m月%d日') %></td>
    </tr>
    <tr>
      <th>価格</th>
      <td><%= @reservation.total_price %>円</td>
    </tr>
  </table>
</div>