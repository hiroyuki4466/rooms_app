<div class = "room_search_page">
  <h5 class = "search_count">検索結果：<%= @rooms.count %>件</h5>
  <table class = "room_search_table">
    <thead>
      <tr>
        <th>ルーム画像</th>
        <th>ルーム名</th>
        <th>住所</th>
        <th>料金</th>
      </tr>
    </thead>

    <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= image_tag room.room_image, class: "room_image" %></td>
        <td><%= link_to room.room_name, room_path(room) %></td>
        <td><%= room.address %></td>
        <td>¥<%= room.price %></td>
      </tr>
    <% end %> 
    </tbody>
  </table>
</div>
