<%= render "shared/error", obj: @reservation %>
<div class = "rooms_detail_page">
  <div class = "rooms_detail_nav">
    <div>
      <a><%= image_tag @room.room_image, class: "rooms_detail_room_image" %></a>
    </div>
    <div class = "rooms_detail_info">
      <p>
      <% if current_user.user_image.attached? %>
      <%= image_tag current_user.user_image, class: "room_detail_user_image" %>
      <% else %>
      <%= image_tag 'https://presite-potepancamp-rails-02.herokuapp.com/assets/default_icon-9263fc59c414b7228d256fc178dcb22183561357950a68f5ad086ba7ee054974.jpg', class: "room_detail_user_image" %>
      <% end %>
      </p>
      <div class = "rooms_detail_list">
        <p class = "rooms_detail_room_name"><%= @room.room_name %></p>
        <p><%= @room.address %></p>
      </div>
    </div>
    <div>
      <p class = "room_detail_introduction"><%= @room.introduction %></p>
    </div>
  </div>
  <div class = "rooms_detail_nav">
    <%= form_with model: @reservation, method: :post, url: reservations_confirm_path, local: true do |f| %>
    <%= f.hidden_field :room_id, value: @room.id %>
      <table class = "rooms_detail_table">
        <tr>
          <td>¥<%= @room.price %>/ 日</td>
        </tr>
        <tr>
          <th><%= f.label :start_date, "開始日" %></th>
          <td><%= f.date_field :start_date, placeholder: "年/月/日" %></td>
        </tr>
        <tr>
          <th><%= f.label :end_date, "終了日" %></th>
          <td><%= f.date_field :end_date, placeholder: "年/月/日" %></td>
        </tr>
        <tr>
          <th><%= f.label :number_of_people, "人数" %></th>
          <td><%= f.text_field :number_of_people %>
        </tr>
        <tr>
          <td><%= f.submit "予約する", class: "rooms_detail_reservation_btn" %></td>
        </tr>
      </table>
    <% end %>
  </div>
</div>